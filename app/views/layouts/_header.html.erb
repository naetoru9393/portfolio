<div class="container" style="padding: 0;">
  <header class="navbar navbar-fixed-top header">
    <% if current_user %>
      <%= link_to "My Portfolio", user_path(current_user), id: "logo", class: "navbar-brand", style: "margin-right: 10px; margin-top: 40px; padding-left: 40px;" %>
    <% else %>
      <%= link_to "My Portfolio", root_path, id: "logo", class: "navbar-brand", style: "margin-right: 10px; margin-top: 40px; padding" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li>
          <%= button_to 'ログアウト', logout_path, method: :delete, class: "custom-button", style: "width: 170px; height: 50px; margin: 35px 40px 10px 10px; padding: 12px 40px;" %>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path, class: "custom-button", style: "width: 170px; height: 50px; margin: 35px 40px 10px 50px; padding: 15px 40px;" %></li>
        <% end %>
      </ul>
    </nav>
  </header>
</div>
