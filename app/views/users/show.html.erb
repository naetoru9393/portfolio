      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h1>
        <h1>自己紹介</h1>
        <%= @user.introduction%>
        <%= button_to "自己紹介を編集する", {controller: 'users', action: 'edit'}, {method: :get} %>
        <%= button_to "編集する", {controller: 'categories', action: 'show'}, {method: :get} %>
    </section>
  </aside>
</div>
