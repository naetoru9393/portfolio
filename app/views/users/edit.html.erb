<% provide(:title, 'Edit') %>
<h1>自己紹介を編集する</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user) do |f| %>

      <%= f.label :自己紹介文 %>
      <%= f.text_area :introduction, class: 'form-control' %>

      <%= f.label :アバター画像 %>
      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>

      <%= f.submit "自己紹介を確定する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
