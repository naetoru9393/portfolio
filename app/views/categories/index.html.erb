<% provide(:title, 'Skill') %>
<div class="row">
 <div class="col-md-6 col-md-offset-3">

 <%= select_tag :id, options_for_select([["1", 1], ["2", 2], ["3", 3]])%>

 <select id="myselectbox" onchange="myfunc()">
        <option value="" selected>Please select...</option>
        <option>1</option>
        <option>2</option>
